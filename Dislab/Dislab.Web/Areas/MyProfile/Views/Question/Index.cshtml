@model IEnumerable<Dislab.Base.Features.Questions.Entities.AskQuestion>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MyProfile/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>DataTable</h3>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-10 fw-bold">
                All Question
            </div>
            <div class="col-2">
                <a asp-area="MyProfile" asp-controller="Question" asp-action="Insert" class="btn icon icon-left btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg> Add Question
                </a>
            </div>

            <div class="card-body">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th class="fw-bold">QuestionTitle</th>
                            <th class="fw-bold">QuestionBody</th>
                            <th class ="fw-bold" style="width: 250px">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.QuestionTitle</td>
                                <td>@item.QuestionBody</td>
                                <td>
                                    <div class="buttons">
                                        <a asp-area="MyProfile" asp-controller="Question" asp-action="Update" asp-route-id="@item.Id" class="btn icon btn-primary">
                                            Edit
                                        </a>
                                        <a onclick="deletePost('@item.Id')" class="btn icon btn-danger">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                         }

                        @*Delete Modal Starts*@
                        <form id="deleteForm" method="post" asp-antiforgery="true"
                              asp-area="MyProfile" asp-controller="Question" asp-action="Delete" asp-route-id="">
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Are you sure want to Delete?</h5>

                                            <input type="hidden" id="deleteId" value="" name="id" />

                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="m-3">You won't be able to revert this!</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?') >Yes! Delete</button> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        @*Delete Modal Ends*@

                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>


