@model Dislab.Base.Features.Questions.ViewModels.GetAllQuiestionsVM;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MyProfile/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>DataTable</h3>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-10">
                All Question
            </div>
            <div class="col-2">
                <a asp-area="MyProfile" asp-controller="Question" asp-action="Insert" class="btn icon icon-left btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg> Add Question
                </a>
            </div>

            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>QuestionTitle</th>
                            <th>QuestionBody</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Questions)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.QuestionTitle</td>
                                <td>@item.QuestionBody</td>
                                <td>
                                    <div class="buttons">
                                        <a href="#" class="btn icon btn-primary">
                                            Edit

                                        </a>
                                        <a onclick="deletePost('@item.Id')" class="btn icon btn-danger">
                                            Delete

                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

